{
  "name": "adaptive-insights",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "devDependencies": {
    "eslint": "5.12.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.8",
    "husky": "^0.14.3",
    "lerna": "^2.8.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.4.1"
  },
  "scripts": {
    "start": "yarn run bootstrap && lerna run --parallel start",
    "offline-start": "set INSIGHTS_OFFLINE=true && yarn run start",
    "bootstrap": "lerna bootstrap",
    "clean": "yarn && lerna clean --yes",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write '{client,server}/**/*.{js,json,gql,graphql}'",
    "format:check": "prettier --list-different '{client,server}/**/*.{js,json,gql,graphql}'",
    "precommit": "pretty-quick --staged",
    "openfin": "openfin --launch --config ./client/public/app.json",
    "demo": "lerna run --parallel demo",
    "generate-server-schema": "node ./server/src/generateSchema.js",
    "generate-client-schema": "./client/node_modules/.bin/apollo-codegen introspect-schema ./server/schema.graphql --output ./client/src/schema.json",
    "generate-client-typings": "./client/node_modules/.bin/apollo-codegen generate ./client/src/**/*.graphql --addTypename --schema=./client/src/schema.json --target typescript --output ./client/src/__generated__/types.ts",
    "generate-schema-and-typings": "yarn generate-server-schema && yarn generate-client-schema && yarn run generate-client-typings"
  },
  "author": "",
  "license": "ISC"
}
